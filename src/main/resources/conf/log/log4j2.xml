<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="off" monitorInterval="1800">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %msg%xEx%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="me.qihao" level="info" additivity="false">
            <appender-ref ref="Console"></appender-ref>
        </Logger>

        <root level="error">
            <appender-ref ref="Console"></appender-ref>
        </root>
    </Loggers>
</configuration>